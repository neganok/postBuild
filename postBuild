#!/bin/bash

echo "--------------------------------------------------"
echo "🔄 Đang cài đặt Neofetch..."
echo "--------------------------------------------------"

# Tạo thư mục bin trong home
mkdir -p $HOME/bin
cd $HOME/bin

# Tải neofetch từ GitHub
wget -qO neofetch https://github.com/dylanaraps/neofetch/raw/master/neofetch
chmod +x neofetch

# Thêm vào PATH
export PATH="$HOME/bin:$PATH"

# Kiểm tra Neofetch
echo "✅ Chạy Neofetch..."
neofetch

# Hủy deploy (exit script)
echo "🚨 Hủy deploy..."
exit 1
