#!/bin/bash
set -e  # Dừng script nếu có lỗi

echo "--------------------------------------------------"
echo "🔄 BẮT ĐẦU QUÁ TRÌNH CÀI ĐẶT TRÊN MYBINDER..."
echo "--------------------------------------------------"

echo "------------------[ CÀI ĐẶT NEOFETCH ]-------------------"
sudo apt-get update && sudo apt-get install -y neofetch
echo "✅ Cài đặt neofetch hoàn tất!"

echo "------------------[ CHẠY NEOFETCH ]-------------------"
if command -v neofetch &> /dev/null
then
    neofetch
    echo "✅ Hiển thị thông tin hệ thống!"
else
    echo "🚨 Lỗi: Không tìm thấy neofetch! 🚨"
    exit 1
fi

echo "--------------------------------------------------"
echo "🎉 QUÁ TRÌNH CÀI ĐẶT HOÀN TẤT! HỦY DEPLOY NGAY BÂY GIỜ!"
echo "--------------------------------------------------"
exit 0
