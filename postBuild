#!/bin/bash

echo "--------------------------------------------------"
echo "🔄 BẮT ĐẦU QUÁ TRÌNH CÀI ĐẶT TRÊN MYBINDER..."
echo "--------------------------------------------------"

# Cài đặt neofetch
echo "------------------[ CÀI ĐẶT NEOFETCH ]-------------------"
apt update && apt install -y neofetch
echo "✅ Cài đặt neofetch hoàn tất!"
echo "--------------------------------------------------"

# Chạy neofetch
echo "------------------[ CHẠY NEOFETCH ]-------------------"
neofetch
echo "✅ Hiển thị thông tin hệ thống!"
echo "--------------------------------------------------"

echo "🎉 QUÁ TRÌNH CÀI ĐẶT HOÀN TẤT! HỦY DEPLOY NGAY BÂY GIỜ!"
echo "--------------------------------------------------"

echo "🚨 DỪNG DEPLOY TẠI ĐÂY! 🚨"
exit 1
