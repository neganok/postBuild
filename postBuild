#!/bin/bash

echo "--------------------------------------------------"
echo "🔄 BẮT ĐẦU QUÁ TRÌNH CÀI ĐẶT TRÊN MYBINDER..."
echo "--------------------------------------------------"

echo "------------------[ CÀI ĐẶT NEOFETCH ]-------------------"
apt-get update && apt-get install -y neofetch

if command -v neofetch &> /dev/null
then
    echo "✅ Cài đặt neofetch hoàn tất!"
else
    echo "🚨 Lỗi: Không thể cài đặt neofetch! 🚨"
    exit 1
fi

echo "------------------[ CHẠY NEOFETCH ]-------------------"
neofetch || echo "🚨 Lỗi: Không tìm thấy neofetch! 🚨"

echo "✅ Hoàn thành quá trình cài đặt!"
